using System;

namespace MyApp // Note: actual namespace depends on the project name.
{
    internal class Program
    {
        static void Main(string[] args)
        {

            double himikali = 5.80;
            double markeri = 7.20;
            double preparati = 1.20;

            int broiH = int.Parse(Console.ReadLine());
            int broiM= int.Parse(Console.ReadLine());
            int broiP = int.Parse(Console.ReadLine());
          double discount = double.Parse(Console.ReadLine());

            double suma = (broiH * himikali + broiM * markeri + broiP * preparati);
            double result = suma - suma * discount / 100;

            Console.WriteLine(result);
        }
    }
}
